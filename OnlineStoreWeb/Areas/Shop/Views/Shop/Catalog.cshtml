@model IEnumerable<ProductCategory>

@{
    ViewData["Title"] = "Shop Catalog";
}

<div class="container">
    <h1 class="mb-4 text-center">Shop Catalog</h1>
    <div class="row g-4">
        @foreach (ProductCategory category in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm h-100">
                    <img class="card-img-top" src="/@(category.Photo ?? "images/image-placeholder.png")" alt="Category Image"/>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">@category.Name</h5>
                        <p class="card-text flex-grow-1 text-muted">@category.Description</p>
                        <a asp-action="Category" asp-route-id="@category.Id" class="btn btn-outline-primary mt-auto">
                            View Category
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
