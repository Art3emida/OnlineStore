@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container">
    <h1 class="text-center display-4 mb-4">
        @ViewData["Title"]
    </h1>
    <p class="lead text-center text-muted mb-5">
        Your privacy is important to us. Please review our policy below.
    </p>
    <div class="content">
        <div class="mb-4">
            <h2 class="h4 text-primary">Information Collection</h2>
            <p class="text-muted">
                We collect various types of information in order to provide better services to all our users.
            </p>
        </div>
        <div class="mb-4">
            <h2 class="h4 text-primary">How We Use Your Information</h2>
            <p class="text-muted">
                Your information helps us personalize your experience, improve our website, and communicate with you.
            </p>
        </div>
        <div class="mb-4">
            <h2 class="h4 text-primary">Items Protection</h2>
            <p class="text-muted">
                We take reasonable steps to protect your information from loss, theft, and misuse.
            </p>
        </div>
        <div>
            <h2 class="h4 text-primary">Contact Us</h2>
            <p class="text-muted">
                If you have any questions about our privacy policy, feel free to contact us.
            </p>
        </div>
    </div>
</div>
